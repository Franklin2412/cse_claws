<% provide(:title, "Sign Up") %>
<h1 class="center"> Sign Up </h1>
<div class="row">
	<div class="span3 offset4 signupRow">
		<%= form_for @user, multipart: true do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.label :email %>
			<%= f.text_field :email %>
			<%= f.label :password %>
			<%= f.password_field :password %>
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>
			<%= f.label :image, "Upload your photo" %>
			<%= f.file_field :image  %>
			<%= f.submit "Create Account", class: "btn btn-primary signupButton" %>
		<% end %>
	</div>
</div>